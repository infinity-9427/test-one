# Backend Environment Variables Sample
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Design Scoring Backend
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=localhost
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/design_scoring_db
# or for SQLite: sqlite:///./design_scoring.db

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security
SECRET_KEY=your_secret_key_here_generate_a_strong_random_string
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# External Services
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Website Analysis
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_ANALYSES=5
