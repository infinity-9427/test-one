# Website Design Scorer Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Website Design Scorer
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=local

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Ollama Configuration (for Docker Compose)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5vl:latest
OLLAMA_TIMEOUT=180

# Playwright Configuration  
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=60000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_HOURS=24
CACHE_DIR=./cache

# Cloudinary Configuration (Image Storage)
UPLOAD_FOLDER=web-analyze-engine
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Sheets Configuration (Results Logging)
GOOGLE_SHEETS_CREDENTIALS_PATH=credentials/google-sheets-service-account.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id
