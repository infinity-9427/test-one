# Production Environment Variables
ENVIRONMENT=prod
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=120

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=45000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_HOURS=48
CACHE_DIR=./cache

# Cloudinary Configuration (to be filled when API keys are provided)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google Sheets Configuration (to be filled when API keys are provided)
GOOGLE_SHEETS_CREDENTIALS_PATH=
GOOGLE_SHEETS_SPREADSHEET_ID=
