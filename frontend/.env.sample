# Frontend Environment Variables Sample
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME=Design Scoring & Reporting Tool
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
API_SECRET_KEY=your_api_secret_key_here

# Backend Integration
BACKEND_URL=http://localhost:8000
BACKEND_API_KEY=your_backend_api_key_here

# External Services
NEXT_PUBLIC_ANALYTICS_ID=your_google_analytics_id
NEXT_PUBLIC_GTAG_ID=your_gtag_id

# Authentication (if needed)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here
GITHUB_ID=your_github_oauth_id
GITHUB_SECRET=your_github_oauth_secret
GOOGLE_ID=your_google_oauth_id
GOOGLE_SECRET=your_google_oauth_secret

# Database (if frontend needs direct access)
DATABASE_URL=your_database_connection_string

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
UPLOAD_ENDPOINT=/api/upload

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# Deployment
VERCEL_URL=your_vercel_deployment_url
NEXT_PUBLIC_DOMAIN=your-domain.com

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600

# PDF Generation
PDF_SERVICE_URL=http://localhost:8000/api/pdf
PDF_API_KEY=your_pdf_service_key

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@your_twitter
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/your-company
